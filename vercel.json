{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.themoviedb.org/3/:path"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Accept"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
